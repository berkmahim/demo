<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo.AddRecipeController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <Label text="Tarif Ekle"/>
    <TextField fx:id="recipeNameField" promptText="Tarif Adı"/>
    <TextField fx:id="categoryField" promptText="Kategori"/>
    <TextField fx:id="prepTimeField" promptText="Hazırlama Süresi"/>
    <TextArea fx:id="instructionsField" promptText="Talimatlar"/>

    <Label text="Malzemeler"/>
    <TextField fx:id="ingredientNameField" promptText="Malzeme Adı"/>
    <TextField fx:id="ingredientQuantityField" promptText="Miktar"/>
    <TextField fx:id="ingredientUnitField" promptText="Birim"/>
    <TextField fx:id="ingredientPriceField" promptText="Birim Fiyatı"/>
    <Button text="Malzeme Ekle" onAction="#addIngredient"/>

    <Button text="Tarif Ekle" onAction="#addRecipe"/>
</VBox>
