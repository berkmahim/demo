<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label fx:id="welcomeText" text="Welcome!"/>
    <TableView fx:id="tarifTableView">
        <columns>
            <TableColumn fx:id="tarifAdiColumn" text="Tarif Adı"/>
            <TableColumn fx:id="kategoriColumn" text="Kategori"/>
            <TableColumn fx:id="hazirlamaSuresiColumn" text="Hazırlanma Süresi"/>
            <TableColumn fx:id="maliyetColumn" text="Maliyet"/>
        </columns>
    </TableView>
    <TableView fx:id="ingredientsTable">
        <columns>
            <TableColumn fx:id="malzemeIngredientNameColumn" text="Malzeme Adı"/>
            <TableColumn fx:id="malzemeQuantityColumn" text="Miktar"/>
            <TableColumn fx:id="malzemeUnitColumn" text="Birim"/>
            <TableColumn fx:id="malzemeUnitPriceColumn" text="Birim Fiyatı"/>
        </columns>
    </TableView>
    <Label fx:id="talimatlarLabel" text="Talimatlar"/>
    <Button text="Yeni Tarif Ekle" onAction="#showAddRecipe"/>
</VBox>
